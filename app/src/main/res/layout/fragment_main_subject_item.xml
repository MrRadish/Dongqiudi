<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/subject_img"

        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/subject_title"
        android:text="aaaaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subject_img"
        android:layout_alignRight="@+id/subject_description"
        android:layout_alignEnd="@+id/subject_description"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:id="@+id/subject_description"
        android:text="bbbbbbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp"/>
</RelativeLayout>