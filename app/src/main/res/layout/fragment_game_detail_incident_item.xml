<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/event_MyContext_left"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:padding="8dp"
        android:background="#fff"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/event_linearLayout"
        android:layout_toStartOf="@+id/event_linearLayout"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="25dp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_MyContext_right"
        android:padding="8dp"
        android:background="#fff"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/event_linearLayout"
        android:layout_toEndOf="@+id/event_linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="25dp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_link_top"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/event_link" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/event_time"
            android:gravity="center"
            android:text="19"
            android:textColor="#fff"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/event_link_bottom"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/event_link" />
    </LinearLayout>


</RelativeLayout>
