<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="35dp"
    android:orientation="horizontal"
    android:gravity="center"

    >
    <TextView
        android:gravity="center"
        android:id="@+id/item_text_time_race"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/item_text_aname_race"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageView
    android:id="@+id/item_aimg_race"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
        android:maxHeight="35dp"
        android:maxWidth="35dp"/>
    <TextView
        android:gravity="center"
        android:id="@+id/item_text_score_race"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/item_bimg_race"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/item_text_bname_race"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
