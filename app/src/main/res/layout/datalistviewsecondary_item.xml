<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="35dp"
    android:gravity="center"

    >

    <TextView
    android:gravity="center"
    android:id="@+id/item_text_name_secondary"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/item_img_secondary"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/item_text_team_secondary"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/item_text_secondarynum_secondary"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
