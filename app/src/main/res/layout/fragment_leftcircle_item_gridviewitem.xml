<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_avatar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textview_titlename"
        android:layout_above="@+id/imageView_avatar"
        android:layout_toRightOf="@+id/imageView_avatar"
        android:layout_toEndOf="@+id/imageView_avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_titlename"
        android:src="@drawable/visitor_circle"
        android:layout_toRightOf="@+id/imageView_avatar"
        android:layout_toEndOf="@+id/imageView_avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imageView_membercount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_membercount"
        android:layout_alignTop="@+id/imageView_membercount"
        android:layout_toRightOf="@+id/imageView_membercount"
        android:layout_toEndOf="@+id/imageView_membercount"
        android:layout_marginLeft="3dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_topiccount"
        android:src="@drawable/editor_circle"
        android:layout_below="@+id/imageView_membercount"
        android:layout_alignLeft="@+id/imageView_membercount"
        android:layout_alignStart="@+id/imageView_membercount"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_topiccount"
        android:layout_alignTop="@+id/imageView_topiccount"
        android:layout_alignLeft="@+id/textView_membercount"
        android:layout_alignStart="@+id/textView_membercount" />


</RelativeLayout>